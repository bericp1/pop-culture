<div head></div>
<div class="container new-player-container">
  <div class="row-fluid">
    <div class="offset2 span4 well">
      <h3>Step 1</h3>
      <h4>What's your name?</h4>
      <div class="form-group">
          <input type="text" placeholder="Name" ng-model="data.playerName" class="form-control">
      </div>

    </div>
    <div class="span4 well smooth-size">
      <h3>Step 2</h3>
      <h4>Select a running game.</h4>

      <div ng-show="!data.gamesLoaded">
        Loading games...
      </div>

      <div ng-show="data.gamesLoaded">
        <div ng-show="data.games.length < 1" class="muted text-center">No games available :-(</div>
        <ul class="current-games">
          <li ng-repeat="game in data.games">{{game.name}}</li>
        </ul>
      </div>

    </div>
  </div>

  <div class="row-fluid">
    <div class="offset5 span2 text-center">
      <input type="button" value="Start" class="btn btn-primary start-button input-block-level">
    </div>
  </div>
</div>
<div foot></div>